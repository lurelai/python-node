FROM python:3.12.2

RUN apt update -y

# Install vim
RUN apt install vim -y

# Install nodejs (21.6.2), npm (10.4.0) and yarn
RUN apt update -y \
    curl -fsSL https://deb.nodesource.com/setup_21.x | bash - && \
    apt-get install nodejs=21.6.2-1nodesource1 -y \
    npm install -g npm@10.4.0 \
    npm install yarn

# FLASK (optinioal)
ENV FLASK

